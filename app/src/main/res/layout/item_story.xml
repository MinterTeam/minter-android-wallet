<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="98dp"
    android:layout_height="98dp"
    android:layout_marginEnd="@dimen/margin_edges"
    android:background="@drawable/shape_story"
    android:clickable="true"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView

        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_welcome" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:background="@drawable/shape_black_half_vignette">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_edges_half"
            android:layout_marginEnd="@dimen/margin_edges_half"
            android:layout_marginBottom="@dimen/margin_edges_half"
            android:fontFamily="@font/_inter_semi_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            tools:text="Как праивльно выбирать мастерндоу?" />
    </FrameLayout>


</FrameLayout>