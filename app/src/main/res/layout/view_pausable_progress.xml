<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/colorPrimaryDark"
    tools:layout_height="match_parent">

    <View
        android:id="@+id/back_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stories_progress_bar_height"
        android:background="@drawable/shape_rounded_progress_back" />

    <View
        android:id="@+id/front_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stories_progress_bar_height"
        android:background="@drawable/shape_rounded_progress_active"
        android:scaleX="0"
        android:transformPivotX="0dp"
        tools:scaleX=".9" />

    <View
        android:id="@+id/max_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stories_progress_bar_height"
        android:background="@drawable/shape_rounded_progress_active"
        android:visibility="gone" />
</FrameLayout>