<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_edges"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/btn_border_radius"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounder_top_primary"
            android:fontFamily="@font/_ubuntu_bold"
            android:gravity="center"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:textColor="@color/textColorWhite"
            tools:text="@tools:sample/cities" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="15"
            tools:listitem="@layout/item_list_dialog_account_selector" />
    </LinearLayout>
</android.support.v7.widget.CardView>