<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_edges_medium"
    android:paddingEnd="@dimen/margin_edges_medium">

    <TextView
        android:id="@+id/label_commission"
        style="@style/Wallet.ItemTxLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_commission"
        app:layout_constraintEnd_toStartOf="@id/label_coin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/label_coin"
        style="@style/Wallet.ItemTxLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_coin"
        app:layout_constraintStart_toEndOf="@id/label_commission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/value_commission"
        style="@style/Wallet.ItemTxValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_commission"
        app:layout_constraintWidth_percent=".5"
        tools:text="10%" />

    <TextView
        android:id="@+id/value_coin"
        style="@style/Wallet.ItemTxValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/value_commission"
        app:layout_constraintTop_toBottomOf="@id/label_coin"
        app:layout_constraintWidth_percent=".5"
        tools:text="BIP" />

    <!--    STAKE -->
    <TextView
        android:id="@+id/label_stake"
        style="@style/Wallet.ItemTxLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_stake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_commission" />

    <TextView
        android:id="@+id/value_stake"
        style="@style/Wallet.ItemTxValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_stake"
        tools:text="100000000" />
</androidx.constraintlayout.widget.ConstraintLayout>
