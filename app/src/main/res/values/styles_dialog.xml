<resources>

    <style name="WalletDialog">

    </style>

    <style name="WalletDialog.Header">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="paddingStart">@dimen/margin_edges</item>
        <item name="paddingEnd">@dimen/margin_edges</item>
        <item name="background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WalletDialog.TextTitle">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WalletDialog.TextLabel">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:fontFamily">@font/_inter_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WalletDialog.TextLabel.Small">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/textColorGrey</item>
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="WalletDialog.TextName">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="WalletDialog.TextName.Blue">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorPrimaryLighter</item>
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>