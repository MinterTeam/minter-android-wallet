<resources>

    <style name="Input" parent="WalletBase">
        <item name="android:textColor">@color/text_input_stateful</item>
        <item name="inputMinHeight">48dp</item>
        <item name="inputDisableSuggestions">true</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="inputStyle">@style/Input.EditTextStyle</item>
        <item name="inputTextAppearance">@style/Input.EditTextTextAppearance</item>
        <item name="labelTextAppearance">@style/Input.LabelTextAppearance</item>
        <item name="errorTextAppearance">@style/Input.ErrorTextAppearance</item>
        <item name="errorStyle">@style/Input.Error</item>
        <item name="suffixImageStyle">@style/Input.SuffixImage</item>
        <item name="suffixTextStyle">@style/Input.SuffixButton</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="Input.Error" parent="WalletBase">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">@dimen/margin_edges</item>
    </style>

    <style name="InputAC" parent="Input">
        <item name="android:completionThreshold">1</item>
        <item name="android:dropDownHeight">wrap_content</item>
    </style>

    <style name="Input.SuffixImage" parent="WalletBase">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_suffix</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="Input.SuffixButton" parent="WalletBase">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="suffixTextAppearance">@style/Input.SuffixButton.TextAppearance</item>
    </style>

    <style name="Input.CurrencyPreSuffix" parent="WalletBase">
        <item name="android:textAllCaps">true</item>
        <item name="presuffixTextAppearance">@style/Input.CurrencyPreSuffix.TextAppearance</item>
    </style>

    <style name="Input.CurrencyPreSuffix.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_input_stateful</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Input.SuffixButton.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Input.EditTextStyle" parent="WalletBase">
        <item name="android:background">@drawable/bg_edittext_states</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Input.EditTextTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/_inter_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Input.LabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_edges_half</item>
    </style>

    <style name="Input.ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/_inter_semi_bold</item>
        <item name="android:layout_marginTop">@dimen/margin_edges_half</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/errorColor</item>
    </style>
</resources>