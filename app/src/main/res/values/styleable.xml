<resources>
    <declare-styleable name="PrefixEditText">
        <attr name="prefix" format="string"/>
        <attr name="prefixOnEmpty" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ToolbarProgress">
        <attr name="navigationIcon"/>
        <attr name="title" />
        <attr name="titleTextColor" />
        <attr name="actionIcon" format="integer" />
        <attr name="enableAction" format="boolean" />
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ColoredProgressBar">
        <attr name="color" format="color" />
    </declare-styleable>

    <declare-styleable name="WalletSelector">
        <attr name="ws_name_color" format="color" />
        <attr name="ws_subtitle_color" format="color" />
        <attr name="ws_dropdown_tint" format="color" />
    </declare-styleable>

    <declare-styleable name="TransactionFilter">
        <attr name="tf_def_value" format="enum">
            <enum name="all" value="0" />
            <enum name="incoming" value="1" />
            <enum name="outgoing" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PoolsFilterView">
        <attr name="pf_def_value" format="enum">
            <enum name="all" value="0" />
            <enum name="staked" value="1" />
            <enum name="farming" value="2" />
        </attr>
    </declare-styleable>
</resources>